{
  "name": "autoskills-mcp",
  "version": "1.0.0",
  "description": "MCP server that automatically reviews completed tasks and helps AI agents build a reusable personal skills library",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "autoskills": "dist/index.js",
    "skills": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-skills",
    "copy-skills": "node -e \"const fs=require('fs');const p=require('path');const src='src/builtin-skills';const dst='dist/builtin-skills';if(!fs.existsSync(dst))fs.mkdirSync(dst,{recursive:true});fs.readdirSync(src).filter(f=>f.endsWith('.md')).forEach(f=>fs.copyFileSync(p.join(src,f),p.join(dst,f)))\"",
    "dev": "tsc --watch",
    "start": "node dist/index.js"
  },
  "keywords": [
    "mcp",
    "ai",
    "agent",
    "skills",
    "automation"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1"
  },
  "devDependencies": {
    "@types/node": "^22.15.0",
    "typescript": "^5.8.0"
  }
}
